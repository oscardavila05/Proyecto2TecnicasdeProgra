@model IEnumerable<MiProyectoMVC.Models.Cajero>

@{
    ViewData["Title"] = "Cajeros";
}

<h1>Cajeros</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Turno</th>
            <th>Fecha de Ingreso</th>
            <th>Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Turno</td>
                <td>@item.FechaIngreso.ToShortDateString()</td>
                <td>@item.Salario</td>
            </tr>
        }
    </tbody>
</table>

<!-- Botón para Volver al Home -->
<a href="@Url.Action("Index", "Home")" class="btn btn-info">Volver al Inicio</a>
